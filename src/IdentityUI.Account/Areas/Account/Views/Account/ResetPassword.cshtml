@model SSRD.IdentityUI.Account.Areas.Account.Models.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

@section script {
    @await Component.InvokeAsync("AdminUIReCaptchaJavaScript", new { action = "resetPassword" })
}

<div class="app-container">
    <div class="h-100 bg-plum-plate bg-animation">
        <div class="d-flex min-vh-100 justify-content-center align-items-center">
            <div class="mx-auto app-login-box col-md-8">
                <!-- <div class="app-logo-inverse mx-auto mb-3"></div> -->
                <div class="modal-dialog w-100 mx-auto">
                    <div class="modal-content">
                        <form class="" asp-area="Account" asp-controller="Account" asp-action="ResetPassword" method="post">
                            <div class="modal-body extra-body-padding">
                                <div class="h5 modal-title text-center">
                                    <h4 class="mt-2 modal-header-custom">
                                        <div>Forgot your password?</div>
                                        <span>Please fill the form below to reset your password</span>
                                    </h4>
                                </div>

                                @await Component.InvokeAsync("AdminUIReCaptchaInput")

                                <div class="form-row">
                                    <input asp-for="Code" type="hidden" />
                                    <div class="col-md-12">
                                        <div class="position-relative form-group">
                                            <input asp-for="Email" placeholder="Email here..." type="text" class="form-control">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="position-relative form-group">
                                            <input asp-for="Password" placeholder="Password here..." type="password" class="form-control">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="position-relative form-group">
                                            <input asp-for="ConfirmPassword" placeholder="Repeat Password here..." type="password" class="form-control">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="modal-footer clearfix">
                                <a id="toDashboard" class="btn btn-light btn-lg lBtnMarg" href="@PagePath.HOME">Go to Home</a>
                                <button class="btn btn-primary btn-lg">Submit</button>
                            </div>

                        </form>
                    </div>
                </div>
                <div class="text-center text-white opacity-8 mt-3">Copyright © @CopyRightModel.NAME @CopyRightModel.YEAR </div>
            </div>
        </div>
    </div>
</div>