@inject Microsoft.Extensions.Options.IOptions<SSRD.IdentityUI.Core.Models.Options.IdentityUIEndpoints> _identityUIEndpoints;

@inject SSRD.IdentityUI.Core.Interfaces.Services.IIdentityUIUserInfoService _identityUIUserInfoService;

<nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
    <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center menu-color">
        <a class="navbar-brand brand-logo mr-5" href="@_identityUIEndpoints.Value.Home">
            <img src="@_identityUIEndpoints.Value.AdminLogo" class="mr-2" alt="logo">
        </a>

        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end menu-line-color">
        <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item nav-profile dropdown">
                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                    <img src="@_identityUIEndpoints.Value.ProfileImage" alt="" class="profile-image-sm" />
                    <span class="user-name">@_identityUIUserInfoService.GetUsername()</span> <i class="fas fa-angle-down"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" href="@_identityUIEndpoints.Value.Manage">
                        <i class="fas fa-cogs text-primary"></i>
                        <span class="i-mar">Settings</span>

                    </a>
                    <a class="dropdown-item" href="@_identityUIEndpoints.Value.Logout">
                        <i class="fas fa-sign-out-alt text-primary"></i>
                        <span class="i-mar">Logout</span>
                    </a>
                </div>
            </li>
        </ul>
        <div class="menu-color alternative-menu-button ">
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                <i class="fas fa-bars"></i>
            </button>
        </div>

    </div>
</nav>